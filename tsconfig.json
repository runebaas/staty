{
  "compilerOptions": {
    /* Basics */
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": ["esnext"],

    /* Build Config */
    "outDir": "./lib",
    "declaration": true,
    "sourceMap": false,
    "declarationMap": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "newLine": "LF",
    "incremental": false,

    /* Language Config */
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "suppressImplicitAnyIndexErrors": false,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
